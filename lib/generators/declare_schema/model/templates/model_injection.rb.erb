<% for attribute in field_attributes %>
    <%= "%-#{max_attribute_length}s" % attribute.name %> <%= attribute.type.to_sym.inspect %><%=
      case attribute.type.to_s
      when 'string'
        ', limit: 255'
      else
        ''
      end
    %>

<% end %>
<% if options[:timestamps] %>
    timestamps
<% end %>
